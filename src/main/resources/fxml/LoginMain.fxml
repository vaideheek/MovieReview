<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="LoginAnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #003a88;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moviereview.Controllers.LoginController">
    <children>
        <TextField fx:id="usernameTextField" layoutX="319.0" layoutY="98.0" prefHeight="44.0" prefWidth="204.0" promptText="Username">
            <font>
                <Font name="Baskerville" size="17.0" />
            </font>
        </TextField>
        <PasswordField fx:id="enterPasswordField" layoutX="319.0" layoutY="157.0" prefHeight="44.0" prefWidth="204.0" promptText="Password">
            <font>
                <Font name="Baskerville" size="17.0" />
            </font>
        </PasswordField>
        <Button fx:id="signupButton" layoutX="383.0" layoutY="336.0" mnemonicParsing="false" onAction="#signupButtonOnAction" prefHeight="32.0" prefWidth="77.0" style="-fx-background-color: #b0dbf1; -fx-background-radius: 20;" text="Sign Up">
            <font>
                <Font name="Baskerville" size="15.0" />
            </font>
        </Button>
        <Button fx:id="loginButton" layoutX="383.0" layoutY="226.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="32.0" prefWidth="77.0" style="-fx-background-color: #b0dbf1; -fx-background-radius: 20;" text="Login">
            <font>
                <Font name="Baskerville" size="18.0" />
            </font>
        </Button>
        <Button fx:id="fypButton" layoutX="341.0" layoutY="281.0" mnemonicParsing="false" onAction="#fypButtonOnAction" style="-fx-background-color: #b0dbf1; -fx-background-radius: 20;" text="Forgot Your Password?">
            <font>
                <Font name="Baskerville" size="15.0" />
            </font>
        </Button>
        <ImageView fitHeight="189.0" fitWidth="241.0" layoutX="31.0" layoutY="111.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/download.png" />
            </image>
        </ImageView>

    </children>
</AnchorPane>
