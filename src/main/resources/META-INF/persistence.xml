<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="MovieReview">
        <description>Movie Hibernate Entity-Manager</description>
        <!-- Add persistent Classes -->
        <class>com.example.moviereview.Models.UserData</class>
        <class>com.example.moviereview.Models.ComedyData</class>
        <class>com.example.moviereview.Models.FantasyData</class>
        <class>com.example.moviereview.Models.HorrorData</class>
        <class>com.example.moviereview.Models.RomanceData</class>
        <class>com.example.moviereview.Models.SciFiData</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <!-- localhost:8082 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:file:/Users/vaideheekore/Downloads/MR/userdata_db"/>
            <property name="javax.persistence.jdbc.user" value="vk"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
